<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionButtonStyle">@style/ActionBarButton</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/holo_orange_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--setting size action bar -->
    <style name="ActionBarButton" parent="@android:style/Widget.ActionButton">
        <item name="android:drawablePadding">@dimen/_10sdp</item>
    </style>


    <!-- Style bottom bar. -->
    <style name="BottombarMenu">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="ToolbarTitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>


    <!--Style edit-->
    <style name="etStyle1">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:scrollbars">horizontal</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/colorTextTitle</item>
    </style>



    <!--Style text-->
    <style name="tvStyle1">
        <item name="android:background">@null</item>
        <item name="android:textColor">#95ffffff</item>
    </style>
    <style name="tvStyle2">
        <item name="android:textColorHint">#85ffffff</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:background">@drawable/xml_retangle</item>
        <item name="android:textColor">@color/colorTextTitle</item>
    </style>

    <style name="tvStyle21" parent="tvStyle2">
        <item name="android:background">@null</item>
    </style>

    <style name="tvStyle3" parent="tvStyle1">
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/helveticaneuelightitalic</item>
    </style>


    <!--Style button-->
    <style name="MenuButton" parent="@android:style/Widget.ActionButton">
    </style>

</resources>
