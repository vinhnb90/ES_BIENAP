<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    tools:background="@color/colorBackgroundHome"
    tools:context="vn.com.esolutions.es_bienap.DeviceFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btn_add_report"
                style="@style/MenuButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/ic_add_device"
                android:fontFamily="@font/helveticaneuelightitalic"
                android:text="Thêm mới Phiếu"
                android:textColor="@color/colorTextTitle"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_search_report"
                style="@style/MenuButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/ic_search_menu"
                android:fontFamily="@font/helveticaneuelightitalic"
                android:text="Tìm phiếu"
                android:textColor="@color/colorTextTitle"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_upload_report"
                style="@style/MenuButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:drawableTop="@drawable/ic_upload_menu"
                android:fontFamily="@font/helveticaneuelightitalic"
                android:text="Gửi phiếu"
                android:textColor="@color/colorTextTitle"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rl_add_report"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_menu"
            android:padding="@dimen/_16sdp"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/rl_tool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/title_tool"
                    style="@style/tvStyle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Công cụ" />


                <LinearLayout
                    android:id="@+id/ll_tool_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/title_tool"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@null"
                        android:drawableRight="@drawable/ic_save"
                        android:padding="@dimen/_5sdp"
                        android:scaleType="centerCrop"
                        android:text="Lưu mẫu"
                        android:textAllCaps="false"

                        android:textColor="@color/colorTextTitle" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_tool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title_tool"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ibtn_create_module"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/xml_circle"
                        android:padding="@dimen/_5sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_module" />

                    <ImageButton
                        android:id="@+id/ibtn_create_question"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/xml_circle"
                        android:padding="@dimen/_5sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_add_question" />


                    <ImageButton
                        android:id="@+id/ibtn_create_checkbox"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/xml_circle"
                        android:padding="@dimen/_5sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_check" />

                    <ImageButton
                        android:id="@+id/ibtn_create_text"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/xml_circle"
                        android:padding="@dimen/_5sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_symbol" />

                    <ImageButton
                        android:id="@+id/ibtn_create_image"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/xml_circle"
                        android:padding="@dimen/_5sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_image" />

                    <ImageButton
                        android:id="@+id/ibtn_create_unit"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/xml_circle"
                        android:padding="@dimen/_5sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_unit" />

                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/v_divide_4"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_below="@+id/rl_tool"
                android:layout_centerHorizontal="true"
                android:background="@color/colorItem" />

            <LinearLayout
                android:id="@+id/scv_add_report"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/v_divide_4"
                android:layout_marginTop="@dimen/_10sdp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/ll_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/tvStyle3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tên mẫu" />

                        <EditText
                            android:id="@+id/tv_report_name"
                            style="@style/tvStyle2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ahdh1456465464" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_module_include"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ll_1"
                        android:orientation="vertical">

                        <include layout="@layout/report"></include>
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rv_search_report"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rl_add_report"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rl_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp">

                    <Button
                        android:id="@+id/btn_search_report_server"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/xml_border_full_1"
                        android:drawableRight="@drawable/ic_search_menu"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="TÌM KIẾM"
                        android:textColor="@color/colorTextTitle"
                        android:textSize="@dimen/_8sdp"></Button>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_toLeftOf="@+id/btn_search_report_server"
                        android:background="@drawable/xml_border_full_1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp">

                        <ImageButton
                            android:id="@+id/ibtn_clear_search_report"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@null"
                            android:src="@drawable/ic_clear_search" />

                        <EditText
                            android:id="@+id/et_search_report"
                            style="@style/etStyle1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toLeftOf="@+id/ibtn_clear_search_report"
                            android:background="@null"
                            android:hint="Thông tin..."
                            android:textColorHint="@color/colorTextTitle" />
                    </RelativeLayout>
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_list_report"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/rl_search"
                    android:layout_marginTop="@dimen/_10sdp"></android.support.v7.widget.RecyclerView>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_upload_report"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rv_search_report"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/ll_1_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/tvStyle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tổng thiết bị" />

                <TextView
                    android:id="@+id/tv_total_report"
                    style="@style/tvStyle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="815" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_2_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_1_1"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/tvStyle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số thiết bị chọn" />

                <TextView
                    android:id="@+id/tv_count_report_choose"
                    style="@style/tvStyle2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="815" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_3_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_2_1"
                android:layout_marginBottom="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/tvStyle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quá trình gửi" />


                <ProgressBar
                    android:id="@+id/pbar_upload_report"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:progress="0"
                    android:progressDrawable="@drawable/xml_pbar_custom" />

                <TextView
                    android:id="@+id/tv_count_percent_report"
                    style="@style/tvStyle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:text="30%" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_4_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_3_1"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_upload_report_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="@dimen/_5sdp"
                    android:drawableRight="@drawable/ic_upload_menu"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="Gửi thiết bị"
                    android:textAllCaps="false"
                    android:textColor="@color/colorTextTitle" />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
